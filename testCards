<script>
  // ----- Charts -----
  function createChart(id, data) {
    new Chart(document.getElementById(id), {
      type: 'line',
      data: {
        labels: ['Mon','Tue','Wed','Thu','Fri'],
        datasets: [{
          data: data,
          borderWidth: 2,
          tension: 0.3,
          fill: false
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { display: false }
        },
        scales: {
          y: { beginAtZero: true }
        }
      }
    });
  }

  createChart('chart1', [70, 75, 80, 85, 92]);
  createChart('chart2', [50, 55, 60, 65, 68]);
  createChart('chart3', [20, 30, 35, 38, 41]);

  // ----- Tables -----
  function createGrid(id) {
    new w2grid({
      name: id,
      box: '#' + id,
      show: { footer: false },
      columns: [
        { field: 'metric', text: 'Metric', size: '60%' },
        { field: 'value', text: 'Value', size: '40%' }
      ],
      records: [
        { recid: 1, metric: 'Avg', value: Math.floor(Math.random() * 100) },
        { recid: 2, metric: 'Min', value: Math.floor(Math.random() * 100) },
        { recid: 3, metric: 'Max', value: Math.floor(Math.random() * 100) }
      ]
    });
  }

  createGrid('grid1');
  createGrid('grid2');
  createGrid('grid3');
</script>

